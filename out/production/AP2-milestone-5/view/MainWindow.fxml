<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import view.JoyStick?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="view.MainWindowController">
   <children>
      <HBox AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <VBox>
               <children>
                  <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="NEVER">
                     <children>
                        <Button mnemonicParsing="false" text="Connect">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" text="Load data" />
                        <Button mnemonicParsing="false" text="Calculate path" HBox.hgrow="NEVER" />
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets bottom="10.0" />
                     </padding>
                  </HBox>
                  <Canvas height="200.0" width="200.0" />
               </children>
            </VBox>
            <VBox alignment="TOP_CENTER" HBox.hgrow="NEVER">
               <children>
                  <RadioButton mnemonicParsing="false" text="AutoPilot" VBox.vgrow="NEVER" />
                  <TextArea prefHeight="300.0" prefWidth="250.0" promptText="write your commands" VBox.vgrow="NEVER">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                     </VBox.margin></TextArea>
                  <Button alignment="TOP_CENTER" mnemonicParsing="false" text="execute" VBox.vgrow="NEVER" />
               </children>
            </VBox>
            <VBox alignment="TOP_CENTER" HBox.hgrow="NEVER">
               <children>
                  <RadioButton mnemonicParsing="false" text="Manual" VBox.vgrow="NEVER" />
                  <Label text="← Aileron → " VBox.vgrow="NEVER">
                     <padding>
                        <Insets bottom="20.0" />
                     </padding>
                  </Label>
                  <HBox alignment="CENTER" VBox.vgrow="NEVER">
                     <children>
                        <Label rotate="270.0" text="throttle" />
                        <Slider fx:id="Throttle" maxHeight="200.0" maxWidth="25.0" orientation="VERTICAL" prefHeight="200.0" prefWidth="25.0" HBox.hgrow="NEVER" />
					     <JoyStick fx:id="joystick" radius_small="70.0" radius_big="150.0" height="300.0" width="300.0">
					     </JoyStick>
                        <Label alignment="CENTER_RIGHT" rotate="90.0" text="← elevator → " />
                     </children>
                  </HBox>
                  <VBox alignment="CENTER">
                     <children>
                        <Slider fx:id="Rudder" maxHeight="25.0" maxWidth="200.0" prefHeight="25.0" prefWidth="200.0" snapToTicks="true" VBox.vgrow="NEVER" />
                        <Label alignment="CENTER" text="rudder" VBox.vgrow="NEVER" />
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
